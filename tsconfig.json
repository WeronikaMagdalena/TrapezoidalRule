{
  "compilerOptions": {
    "target": "es2022",
    "module": "ES6",
    "moduleResolution": "node",
    "lib": [
      "ESNEXT",
      "dom"
    ],
    "allowJs": true,
    "rootDir": "./",
    "outDir": "www/out",
    "declaration": false,
    "alwaysStrict": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "sourceMap": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "lib",
    "test",
    "www"
  ]
}